  <div class="container content-area-height">
    <div class="row">
      <div class="col-sm-3">
        <div class="product-page-title">Products List</div>
      </div>
      <div class="col-sm-3 text-right">
      <%= link_to "Click Here to Sell Your Product", new_product_path(:category_id => params[:category_id]), :class=>"btn btn-primary" %>
     </div>
     <div class="col-sm-6">
      <ul class="text-right">
        <li class="disp-inline">
          <select class="form-control">
            <option>Choose Place</option>
            <option>2</option>
          </select>
        </li>
        &nbsp;&nbsp;
        <li class="disp-inline">
         <select class="form-control">
          <option>Choose Product</option>
          <option>2</option>
        </select>
      </li>
    </ul>
  </div>
</div>
<br><br>
<div class="product-overflow">
<% if @products.present? %>
<% @products.each do |product| %>
<div class="">
  <div class="col-sm-3">
    <div class="thumbnail">
      <%= image_tag(product.images, :alt => "rss feed") %>
     <div class="caption ">
       <div class="row">
         <div class="col-sm-5">
           <label>Name</label>
         </div>
         <div class="col-sm-7">
           <div><%= product.seller_name %></div>
         </div>
       </div>
       <div class="row">
         <div class="col-sm-5">
           <label>Quantity</label>
         </div>
         <div class="col-sm-7">
           <div><%= product.quantity %> <%= product.quantity_type %></div>
         </div>
       </div>
       <div class="row">
         <div class="col-sm-5">
           <label>Min Price</label>
         </div>
         <div class="col-sm-7">
           <div><%= product.price %> / <%= product.price_type %> </div>
         </div>
       </div>
       <div class="row">
         <div class="col-sm-5">
           <label>Close Date</label>
         </div>
         <div class="col-sm-7">
           <div><%= product.close_date %></div>
         </div>
       </div>
     </div>
     <div class="text-right">
      <%= link_to "Quote Your Price", new_bidding_path(product.id), :class => "btn btn-danger" unless product.user_id == current_user.id %>
     </div>
   </div>
 </div>
</div>
<% end %>
<% else %>
<p>No result found</p>
<% end %>

</div>

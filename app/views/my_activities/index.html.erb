 <div class="container content-area-height">
  <div class="product-page-title">My Activities</div>
  <br><br>
  <div class="bid-details my-act">Selling Details</div>
  <div class="row">
  <% @selling_products.each do |selling_product| %>
   <div class="col-sm-3">
    <div class="thumbnail">
     <!-- <img alt="image" src="/assets/veg.jpeg" class="image-height"> -->
     <%= image_tag(selling_product.images, :alt => "rss feed", :class =>"image-height" ) %>
     <div class="caption ">
       <div class="row">
         <div class="col-sm-5">
           <label>Name</label>
         </div>
         <div class="col-sm-7">
           <div><%= selling_product.sub_category.name %></div>
         </div>
       </div>
       <div class="row">
         <div class="col-sm-5">
           <label>Quantity</label>
         </div>
         <div class="col-sm-7">
           <div><%= selling_product.quantity %> <%= selling_product.quantity_type %></div>
         </div>
       </div>
       <div class="row">
         <div class="col-sm-5">
           <label>Min.Price</label>
         </div>
         <div class="col-sm-7">
           <div><%= selling_product.price %> / <%= selling_product.price_type %></div>
         </div>
       </div>
       <div class="row">
         <div class="col-sm-5">
           <label>Close Date</label>
         </div>
         <div class="col-sm-7">
           <div><%= selling_product.close_date %></div>
         </div>
       </div>
     </div>
   <div class="text-right">
      <%= link_to "check bidders", check_biddings_path, :class => "btn btn-danger", remote: true %>
     </div>
   </div>
 </div>
 <% end %>
</div>
<div class="bid-details my-act">Bidding Details</div>
<div class="row">
<% @bidding_products.each do |bidding_product| %>
   <div class="col-sm-3">
    <div class="thumbnail">
     <!-- <img alt="image" src="/assets/veg.jpeg" class="image-height"> -->
     <%= image_tag(bidding_product.product.images, :alt => "rss feed", :class =>"image-height" ) %>
     <div class="caption ">
       <div class="row">
         <div class="col-sm-5">
           <label>Name</label>
         </div>
         <div class="col-sm-7">
           <div><%= bidding_product.product.sub_category.name %></div>
         </div>
       </div>
       <div class="row">
         <div class="col-sm-5">
           <label>Quantity</label>
         </div>
         <div class="col-sm-7">
           <div><%= bidding_product.quantity %> <%= bidding_product.quantity_type %></div>
         </div>
       </div>
       <div class="row">
         <div class="col-sm-5">
           <label>Min.Price</label>
         </div>
         <div class="col-sm-7">
           <div><%= bidding_product.price %> / <%= bidding_product.price_type %></div>
         </div>
       </div>
       <div class="row">
         <div class="col-sm-5">
           <label>Close Date</label>
         </div>
         <div class="col-sm-7">
           <div><%= bidding_product.product.close_date %></div>
         </div>
       </div>
     </div>
   </div>
 </div>
 <% end %>
</div>
</div>
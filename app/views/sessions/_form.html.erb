<%= form_tag sessions_path do %>
  <div class="form-group">
    <label for="exampleInputEmail1">Email Id</label>
    <%= text_field_tag :email, params[:email], :class => "form-control", :id => "exampleInputEmail1", :placeholder => "Email" %>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <%= password_field_tag :password, params[:password], :class => "form-control", :id => "exampleInputPassword1",:placeholder => "Password" %>
  </div>
  <div>
    <%= link_to "forgotten password?", new_password_reset_path %>
  </div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  <%= submit_tag "Log In", :class => "btn btn-primary" %>
</div>
<% end %>